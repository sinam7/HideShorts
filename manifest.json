{
  "manifest_version": 3,
  "name": "HideShorts - YouTube Shorts Blocker",
  "version": "1.0.2",
  "description": "Hide Shorts content everywhere in YouTube.",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 